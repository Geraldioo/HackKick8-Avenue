<%- include('components/headerUser.ejs') %>
<body style="background-color: #EEE9E3;">
    <div class="container">
        <div>
            <h1>
                <b>
                    Sold List
                </b>
            </h1>
        </div>
        <div>
            <a href="/products" class="btn btn-warning" type="button" style="margin-bottom: 20px;">Product Page</a>
        </div>
        <div margin-top: 20px;>
            <table class="table table-bordered table-warning" style="border-color: #EEE9E3;">
                <thead>
                  <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Total Stock</th>
                    <th scope="col">Price</th>
                    <th scope="col">Picture</th>
                    <th scope="col">Type</th>
                  </tr>
                </thead>
                <tbody>
                <% data.forEach(el =>{ %>
                  <tr>
                    <th scope="row"><%= el.name  %></th>
                    <td><%= el.stock  %></td>
                    <td><%= el.formatRupiah  %></td>
                    <td><img src="<%= el.image  %>" alt="" style="width: 90px; height:auto;"></td>
                    <td><%= el.type %></td>
                  </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>